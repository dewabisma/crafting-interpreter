fun hitungLuasBangun(a, b, jenis) {
    if (jenis == "segitiga") {
     return (a * b) / 2;
    }

    if (jenis == "persegi") {
        return a * b;
    }
}

var luasSegiEmpat = hitungLuasBangun(5, 10, "persegi");
var luasSegiTiga = hitungLuasBangun(4, 8, "segitiga");

print "Luas Segi Empat: " + luasSegiEmpat;
print "Luas Segi Tiga: " + luasSegiTiga;